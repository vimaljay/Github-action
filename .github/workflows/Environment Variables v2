name: Environment Variables V2
on:
  push: 
    branches: feature/global-env
#pushasd asdasd
env:
  GLOBAL_VAR: test
jobs:
  first-job:
    name: A Job
    runs-on: ubuntu-latest
    steps:
      - name: Output Global Variable        
        run: echo "${GLOBAL_VAR}"
  second-job:
    name: Another Job
    runs-on: ubuntu-latest
    steps:
      - name: Output Global Variable
        run: echo "${GLOBAL_VAR}"
